{
    "plugins": [
        "plugins/markdown"
    ],
    "recurseDepth": 10,
    "source": {
        "include": ["src/"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "template": "node_modules/clean-jsdoc-theme", 
        "destination": "./docs/", 
        "tutorials": "tutorials",       
        "recurse": true,
        "readme": "README.md",
        "theme_opts": {
            "theme": "dark"
        }
    }
}